require "bundler/gem_helper"

base_dir = File.join(File.dirname(__FILE__))

helper = Bundler::GemHelper.new(base_dir)
def helper.version_tag
  version
end

helper.install
spec = helper.gemspec

# desc "Run tests"
# task :test do
#   ruby("test/run-test.rb")
# end

# task default: :test

desc "Update site"
task :site do
  rm_rf("docs")
  cd("example") do
    sh("bundle", "exec", "jekyll", "build", "--destination", "../docs")
  end
end
